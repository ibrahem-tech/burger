<div class="container">
    <div class="row col title">
        <div class="col s12">
            <h1>Eat Burger!</h1>
        </div>
    </div>

    <hr>

    <div class="row devoured-or-not">
        <div class="col s12 l6" id="notDevoured">
            <h4>Burgers Menu</h4>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col s12 l6" id="devoured">
            <h4>Burgers Devoured!</h4>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <hr>

    <div class="row create-burger">
        <div class="col s12">
            <h4>Add Your Own Burger</h4>
            <form>
                <div class="form-group">
                    <label class="addNewBurger" for="burgerName">Burger Name: </label>
                    <input type="text" id="burgerName" name="name">
                </div>
                <button class="add-burger" id="burgerButton" type="submit">ADD BURGER</button>
            </form>
        </div>
    </div>
</div>